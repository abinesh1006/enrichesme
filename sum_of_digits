#include <stdio.h>
#include <stdlib.h>

void main()
{
    int num;
    int count=0;
    int rem;
    int sum=0;
    printf("enter the number");
    scanf("%d",&num);
    while(num>0)
    {
        rem=num%10;
        sum+=rem;
         num=num/10;
        count++;

    }
    printf("the number of digits is %d",count);
    printf("the sum of digits is %d",sum);

}
